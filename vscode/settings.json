{
    "sublimeTextKeymap.promptV3Features": true,
    "files.insertFinalNewline": true,
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 15,
    "files.trimTrailingWhitespace": true,
    "editor.wordSeparators": "./\\()\"'-:,.;<>~!@#%^&*|+=[]{}`~?",
    "editor.formatOnPaste": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.snippetSuggestions": "top",
    "workbench.colorTheme": "Cobalt2",
    "editor.fontLigatures": true,
    "editor.renderLineHighlight": "none",
    "search.location": "panel",
    "window.title": "${activeEditorLong}${separator}${rootName}${separator}${appName}",
    "editor.minimap.showSlider": "always",
    "editor.showFoldingControls": "always",
    "workbench.iconTheme": null,
    "workbench.statusBar.feedback.visible": false,
    "editor.fontWeight": "100",
    //"terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    "terminal.integrated.shell.windows": "C:\\Program Files\\JPSoft\\TCCLE14x64\\tcc.exe",
    "editor.occurrencesHighlight": false,
    // see https://github.com/Microsoft/vscode/issues/30114
    "editor.hover.enabled": false,
    "bracketPairColorizer.showHorizontalScopeLine": false,
    "bracketPairColorizer.showBracketsInGutter": true,
    "bracketPairColorizer.activeScopeCSS":[
        "borderStyle : solid",
        "borderWidth : 1px",
        "borderColor : {color}; opacity: 0.5"
    ],
    "bracketPairColorizer.highlightActiveScope": true,
    "editor.matchBrackets": false,
    "java.format.enabled": true,
    "azureFunctions.showProjectWarning": false,
    "files.autoSave": "off",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#326992"
    },
    "editor.largeFileOptimizations": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "azureFunctions.showCoreToolsWarning": false,
    "window.restoreWindows": "all"
}
